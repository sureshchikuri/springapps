<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
		<property name="username" value="system" />
		<property name="password" value="student" />
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>
	<bean id="statementCreator" class="com.vcs.creator.StatementCreator"></bean>
	<bean id="executeCallBack" class="com.vcs.creator.ExecuteCallBack"></bean>

	<bean id="jdbcDao" class="com.vcs.dao.JdbcDao">
		<property name="creator" ref="statementCreator"></property>
		<property name="callback" ref="executeCallBack"></property>
		<property name="template" ref="jdbcTemplate"></property>
	</bean>
</beans>